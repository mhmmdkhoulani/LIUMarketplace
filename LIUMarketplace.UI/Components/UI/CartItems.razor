@namespace LIUMarketplace.UI.Components
<div class="container">

    <div class="mb-5">
        <MudText Typo="Typo.h3" Align="Align.Left">Shopping Cart</MudText>
    </div>
    <MudPaper Class="pa-5 ma-2">
        <MudGrid Spacing="@spacing" Justify="Justify.FlexStart">

            <MudItem xs="12" sm="4" md="4">
                <MudGrid Class="d-flex align-center">
                    <MudItem xs="12" sm="6">
                        <MudImage Src="images/book.jpg"  Height="130" Elevation="25" Class="rounded-lg" />
                    </MudItem>
                    <MudItem xs="12" sm="6">
                        <MudText Typo="Typo.h5">$ 55.30</MudText>
                        <MudText Typo="Typo.h6" Color="Color.Primary">Old Book</MudText>
                        <MudText Typo="Typo.subtitle1">Books</MudText>
                    </MudItem>
                </MudGrid>
            </MudItem>
            <MudItem xs="12" sm="8" Class="d-flex justify-space-around align-center">
                <div>
                    <MudButton Variant="Variant.Filled" Color="Color.Primary">Contact Owner</MudButton>
                </div>
                <div>
                    <MudIconButton Icon="@Icons.Material.Filled.Delete" aria-label="delete"></MudIconButton>

                </div>
            </MudItem>


        </MudGrid>

    </MudPaper>



</div>
@code {
    public int spacing { get; set; } = 2;
}

<style>
    .container {
        padding: 40px;
        margin-top: 40px;
    }
</style>
