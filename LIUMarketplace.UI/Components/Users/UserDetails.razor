@namespace LIUMarketplace.UI.Components

<div class="container mt-20">
    <MudPaper Class="pa-16 ma-2">
        <MudGrid Spacing="3" Justify="Justify.Center">

            <MudItem xs="4">
                <MudImage Fluid="true" Src="images/user.png" Alt="user" Elevation="25" Class="rounded-lg ma-4" />
            </MudItem>
            <MudItem xs="1">
            </MudItem>
            <MudItem xs="7" Class="pa-15">

                <MudText Class="mb-5" Typo="Typo.h5" Color="Color.Primary">First Name: <span class="profile-span">@_user.FirstName</span></MudText>
                <MudText Class="mb-5" Typo="Typo.h5" Color="Color.Primary">Last Name: <span class="profile-span">@_user.LastName</span></MudText>
                <MudText Class="mb-5" Typo="Typo.h5" Color="Color.Primary">Email: <span class="profile-span">@_user.Email</span></MudText>
                <MudText Class="mb-5" Typo="Typo.h5" Color="Color.Primary">Major: <span class="profile-span">@_user.Major</span></MudText>
                <MudText Class="mb-5" Typo="Typo.h5" Color="Color.Primary">Campus: <span class="profile-span">@_user.Campus</span></MudText>
            </MudItem>

        </MudGrid>
    </MudPaper>

</div>



<style>
    .container {
        padding: 40px;
        margin-top: 40px;
    }
    .profile-span { 
        color: #000;
        font-size: 18px;
    }
   
</style>