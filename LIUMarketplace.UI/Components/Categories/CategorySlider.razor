@namespace LIUMarketplace.UI.Components
<div class="container">

    <div class="mb-5">
        <MudText Typo="Typo.h6">Browse By Category</MudText>
    </div>
    <MudGrid Spacing="@spacing" Justify="Justify.FlexStart">
        @if (_isBusy)
        {
            for(int i = 0; i> 5; i++){
                <MudItem xs="6" sm="4" md="2">
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
            </MudItem>
            }
        }
        else
        {
            @if (_categories.Count() > 0)
            {
                foreach (var category in _categories)
                {
                    <MudItem xs="6" sm="4" md="2">
                        <MudPaper Class="pa-16 mb-2" >
                            <MudText Typo="Typo.h6" Color="Color.Primary" Style="@_textStyle" @onclick="() => OnViewEvent(category)">@category.Name</MudText>
                        </MudPaper>
                    </MudItem>
                    

                }
            }
            else
            {
                  <MudText Typo="Typo.h6" Color="Color.Info" Align="Align.Center">There is no category available now</MudText>
            }
        }



    </MudGrid>
</div>


<style>
    .container {
        padding: 40px;
        margin-top: 40px;
}
</style>
