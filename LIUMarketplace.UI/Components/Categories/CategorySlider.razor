@namespace LIUMarketplace.UI.Components
<div class="container">

    <div class="mb-5">
        <MudText Typo="Typo.h6">Browse By Category</MudText>
    </div>
    <MudGrid Spacing="@spacing" Justify="Justify.FlexStart">
        @if (_isBusy)
        {
            <MudItem xs="6" sm="4" md="2">
                <MudSkeleton SkeletonType="SkeletonType.Rectangle" Width="200px" Height="110px" />
            </MudItem>
        }
        else
        {
            @if (_categories != null)
            {
                foreach (var category in _categories)
                {
                    <MudItem xs="6" sm="4" md="2">
                        <MudPaper Class="pa-16 mb-2">
                            <MudText Typo="Typo.body2"><MudLink Href="#" onclick=>@category.Name</MudLink></MudText>
                        </MudPaper>
                    </MudItem>

                }
            }
            else
            {
                  <MudText Typo="Typo.body2"><MudLink Href="#" onclick=>There is no category available now</MudLink></MudText>
            }
        }



    </MudGrid>
</div>


<style>
    .container {
        padding: 40px;
        margin-top: 40px;
    }
</style>
